<Page x:Class="FoodOrderApps.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="463*"/>
            <ColumnDefinition Width="342*"/>
            <ColumnDefinition Width="805*"/>
        </Grid.ColumnDefinitions>

        <!-- Gambar background -->
        <Image Source="Images/gedung.jpeg"
               Stretch="Fill"
               Panel.ZIndex="0"
               Opacity="0.85"
               Grid.ColumnSpan="3"/>

        <!-- Konten utama -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Panel.ZIndex="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock Text="Kantin STBhinneka"
                           FontSize="35"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"
                           Panel.ZIndex="2" Width="344"/>

                <Button Content="Masuk"
                        Width="180"
                        Height="50"
                        FontSize="20"
                        Background="#FF6B00"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        Click="Masuk_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
